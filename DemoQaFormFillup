package com.FirstSelenium;

import java.time.Duration;
import java.util.List;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.JavascriptExecutor;
import org.openqa.selenium.Keys;
import org.openqa.selenium.support.ui.Select;
import org.openqa.selenium.support.ui.WebDriverWait;

public class DemoQaFormFill {

	public static void main(String[] args) throws InterruptedException {
		// TODO Auto-generated method stub
		
		WebDriver driver = new ChromeDriver();

		driver.get("https://demoqa.com/automation-practice-form");
		
		driver.manage().window().maximize();
		
		WebDriverWait wait = new WebDriverWait(driver, Duration.ofSeconds(10));
		driver.findElement(By.id("firstName")).sendKeys("Kishan");
		
		driver.findElement(By.id("lastName")).sendKeys("Meta");
		
		
		driver.findElement(By.xpath("//input[@id='userEmail']")).sendKeys("Kishan@gmail.com");
		

		JavascriptExecutor js = (JavascriptExecutor) driver;

		js.executeScript("document.querySelectorAll('iframe[id^=\"google_ads_iframe\"]').forEach(e => e.remove());");

		WebElement genderLabel = driver.findElement(By.xpath("//label[text()='Male']"));
		js.executeScript("arguments[0].click();", genderLabel);

		
		
		
		driver.findElement(By.xpath("//input[@id='userNumber']")).sendKeys("6754323423");
		
		WebElement dateInput = driver.findElement(By.id("dateOfBirthInput"));
		((JavascriptExecutor) driver).executeScript("arguments[0].click();", dateInput);

		Select year = new Select(driver.findElement(By.className("react-datepicker__year-select")));
		year.selectByVisibleText("2024");

		Select month = new Select(driver.findElement(By.className("react-datepicker__month-select")));
		month.selectByVisibleText("May");

		WebElement day = driver.findElement(By.xpath("//div[contains(@class,'react-datepicker__day') and text()='8']"));
		day.click();

		
		
		WebElement subjectInput = driver.findElement(By.id("subjectsInput"));
		subjectInput.sendKeys("Computer Science");
		subjectInput.sendKeys(Keys.ENTER);
		
		WebElement hobbyCheckbox = driver.findElement(By.xpath("//input[@class='custom-control-input' and @value='1']"));
		((JavascriptExecutor) driver).executeScript("arguments[0].click();", hobbyCheckbox);
		
		driver.findElement(By.xpath("//input[@id='uploadPicture']")).sendKeys("C:\\Users\\ABC\\OneDrive\\Pictures\\Screenshots\\Screenshot 2024-03-10 194410.png");
		
		driver.findElement(By.xpath("//textarea[@id='currentAddress']")).sendKeys("Shivbhumi 1, Near By Patel Chowk, Sainik Society");
		

		// Select State
		WebElement stateInput = driver.findElement(By.id("react-select-3-input"));
		stateInput.sendKeys("Rajasthan");
		stateInput.sendKeys(Keys.ENTER);

		// Select City
		WebElement cityInput = driver.findElement(By.id("react-select-4-input"));
		cityInput.sendKeys("Jaiselmer");
		cityInput.sendKeys(Keys.ENTER);

		
		driver.findElement(By.xpath("//button[@id='submit']")).click();
		Thread.sleep(3000);

		
		driver.quit();
		
			
		
	}
		
		

}
